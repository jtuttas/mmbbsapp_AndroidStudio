<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.mmbbs"
      android:versionCode="18"
      android:versionName="1.18" android:installLocation="auto">
    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="17"/>
 <!-- Daniel Lengies: Einbinden der Permissions (notwendige Berechigungen) fÃ¼r GPS und Internet zum Laden der Maps-Daten -->    
